{
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "__tests__"],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "lib",
    "strict": true,
    "allowJs": true,
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
